{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['createdAt'])",
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "players": {
          "$playerId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.hasChildren(['id', 'name', 'isHost', 'status', 'lastSeen'])"
          }
        },
        "gameState": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
}
